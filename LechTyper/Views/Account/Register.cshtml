@using LechTyper.Resources
@model LechTyper.Models.RegisterModel
<h1>@ResourceMain.Register</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <table class="table table-striped table-hover" style="width:40%">
            <tr>
                <td>@Html.LabelFor(m => m.UserName)</td>
                <td>@Html.TextBoxFor(m => m.UserName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.UserMail)</td>
                <td>@Html.TextBoxFor(m => m.UserMail)</td>
            </tr>
        </table>
        <input class="btn btn-default" type="submit" value=@ResourceMain.Register />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}