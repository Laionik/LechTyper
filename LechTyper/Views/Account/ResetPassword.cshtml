@model InstaScore.Models.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Resetowanie hasła</legend>
            <table class="table table-striped table-hover" style="width:40%">
                <tr>
                    <td> @Html.LabelFor(m => m.Password)</td>
                    <td> @Html.PasswordFor(m => m.Password)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                    <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
                </tr>
            </table>
            @Html.HiddenFor(m => m.ReturnToken)
            <input class="btn btn-default" type="submit" value="Resetuj" />
    </fieldset>
    <p class="text-success">@ViewBag.ResetPasswordMessage</p>
}