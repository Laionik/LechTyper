@model LechTyper.Models.LoginModel

@{
    ViewBag.Title = "Zaloguj się";
}

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Zaloguj się</legend>
            <table class="table table-striped table-hover" style="width:40%">
                <tr>
                    <td>@Html.LabelFor(m => m.UserName)</td>
                    <td>
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Password)</td>
                    <td>
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
            </table>
            @*@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })*@
            @Html.CheckBoxFor(m => m.RememberMe) Zapamiętać?
            <br />
            <input class="btn btn-default" type="submit" value="Loguj" />

        </fieldset>
        <br />
        <p>
            @Html.ActionLink("Zarejestruj", "Register") się jeśli jeszcze nie masz konta.
        </p>
    }
</section>

<section class="social" id="socialLoginForm">
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}