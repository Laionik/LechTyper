@using LechTyper.Resources
@model LechTyper.Models.LoginModel

<h1>@ResourceMain.LogIn</h1>

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <table class="table table-striped table-hover" style="width:40%">
                <tr>
                    <td>@Html.LabelFor(m => m.UserName)</td>
                    <td>
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Password)</td>
                    <td>
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
            </table>
             @Html.CheckBoxFor(m => m.RememberMe) @ResourceMain.Remember
            <br />
            <input class="btn btn-default" type="submit" value=@ResourceMain.LogIn />

        </fieldset>
        <br />
    <p>
            @Html.ActionLink(@ResourceMain.PasswordForgot, "LostPassword", null, new { @class = "text-warning" })
        </p>
        <p class="text-info">
            @Html.ActionLink( @ResourceMain.RegisterMessage, "Register", null, new { @class = "text-info" })
        </p>
    }
</section>

<section class="social" id="socialLoginForm">
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}