@using LechTyper.Resources
@model LechTyper.Models.RegisterExternalLoginModel
<hgroup class="title">
    <h1>@ResourceMain.Registration</h1>
</hgroup>
@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ResourceMain.AccountLocalCreate</legend>
        <p>
            @ResourceMain.VerificationSuccess @ResourceMain.Hello <strong>@ViewBag.ProviderDisplayName</strong>!
            @ResourceMain.VerificationMessage
        </p>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <table class="table table-striped table-hover" style="width:40%">
            <tr>
                <td>@Html.LabelFor(m => m.UserName)</td>
                <td>
                    @Model.UserName
                </td>
            </tr>
            @{
                if (ViewBag.ProviderDisplayName == "Twitter")
                {
                    <tr>
                        <td>@Html.LabelFor(m => m.UserMail)</td>
                        <td>
                            @Html.TextBoxFor(m => m.UserMail)
                            @Html.ValidationMessageFor(m => m.UserMail)
                        </td>
                    </tr>
                }
                else
                {
                    @Html.HiddenFor(m => m.UserMail)
                }
            }
        </table>
        <input type="submit" class="btn btn-default" value=@ResourceMain.LogIn />
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}