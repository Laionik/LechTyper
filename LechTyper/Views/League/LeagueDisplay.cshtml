@using LechTyper.Resources
@model List<LechTyper.Models.League>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ViewBag.division. @ResourceMain.League</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-10">
            <div class="bs-component">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@ResourceMain.Position</th>
                            <th>@ResourceMain.Player</th>
                            <th>@ResourceMain.Matches</th>
                            <th>@ResourceMain.Points</th>
                            <th>@ResourceMain.Win</th>
                            <th>@ResourceMain.Draw</th>
                            <th>@ResourceMain.Lose</th>
                            <th>@ResourceMain.GoalScored</th>
                            <th>@ResourceMain.GoalConceded</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(player) + 1)</td>
                                <td>@ViewBag.userNameDictionary[player.userId]</td>
                                <td>@player.matches</td>
                                <td>@player.points</td>
                                <td>@player.win</td>
                                <td>@player.draw</td>
                                <td>@player.lose</td>
                                <td>@player.goalScored</td>
                                <td>@player.goalConceded</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="bs-component">
                <ul class="list-group" style="list-style: none;">
                    @foreach (var division in ViewBag.Leagues)
                    {
                        int divisionNumber = division;
                        <li>@Html.ActionLink(divisionNumber + ". " + ResourceMain.League, "LeagueDisplay", "League", new { division = (int)division }, new { @class = "list-group-item unstyled" })</li>
                    }
                </ul>

            </div>
        </div>
    </div>
</div>
