@model List<LechTyper.Models.Game>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-5">
            <p class="bs-component">
                <h3>Rozegrane mecze @Model.Where(x => x.isCompleted).Count()</h3>
                @{
                    foreach (var x in Model)
                    {
                        if (x.isCompleted)
                        {
                            string temp = "\nData: " + x.date + "\nGospodarz: " + x.Host + "\nGość: " + x.Guest + "\nWynik: "
                            + x.FTHostGoal + " - " + x.FTGuestGoal;
                            <span style="white-space: pre-line">@temp</span>
                            <br />
                        }
                    }
                }
            </p>
        </div>
        <div class="col-lg-5">
            <p class="bs-component">
                <h3>Nie rozegrane @Model.Where(x => !x.isCompleted).Count()</h3>
                @{
                    foreach (var x in Model)
                    {
                        if (!x.isCompleted)
                        {
                            string temp = "\nData: " + x.date + "\nGospodarz: " + x.Host + "\nGość: " + x.Guest;
                            <span style="white-space: pre-line">@temp</span>
                            <br />
                        }
                    }
                }
            </p>
        </div>
    </div>
</div>
