@model List<LechTyper.Models.Rank>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Lp.</th>
                        <th>Kibol</th>
                        <th>Stan konta</th>
                        <th>Dokładne typy</th>
                        <th>1/x/2</th>
                        <th>Średnia stawka</th>
                        <th>Najwyższa wygrana</th>
                        <th>Średnia wygrana</th>
                        <th>Liczba typów</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        List<LechTyper.Models.Twitt> TwitterList = ViewBag.Twitter;
                        int count = 1;
                        foreach (var rank in Model)
                        {
                            double avg = (@rank.Balance - 50) / @rank.Played_number;
                            var username = TwitterList.Find(a => a.user_id == rank.UserID);
                            string link = "https://twitter.com/" + username.user_nick;                       
                            <tr>
                                <td>@count</td>
                                <td><span style="white-space: pre-line"><a href="@link">@username.user_nick</a></span></td>
                                <td>@rank.Balance</td>
                                <td>@rank.Bet_exact</td>
                                <td>@rank.Hda</td>
                                <td>@rank.Bet_avg</td>
                                <td>@rank.Prize</td>
                                <td>@avg</td>
                                <td>@rank.Played_number</td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>

