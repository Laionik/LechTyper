@using LechTyper.Resources
@model IPagedList<LechTyper.Models.Tweet>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink("Panel admina", "Admin")
    </p>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@ResourceMain.Date</th>
                <th>@ResourceMain.Name</th>
                <th>@ResourceMain.MatchResult</th>
                <th>@ResourceMain.MatchHalf</th>
                <th>@ResourceMain.MatchScorer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model)
            {
                <tr>
                    <td>@tweet.postDate</td>
                    <td>@tweet.userName</td>
                    <td>@tweet.result</td>
                    <td>@tweet.resultHalf</td>
                    <td>@tweet.scorer</td>
                    <td>@Html.ActionLink(@ResourceMain.Edit, "TweetEdit", new { x = tweet.Id, page = Model.PageNumber })</td>
                    <td>@Html.ActionLink(@ResourceMain.Delete, "TweetDelete", new { x = tweet.Id, page = Model.PageNumber })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination"))
    </div>
</section>