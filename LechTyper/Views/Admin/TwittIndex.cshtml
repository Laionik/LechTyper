@using LechTyper.Resources
@model IPagedList<LechTyper.Models.Twitt>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink("Panel admina", "Admin")
    </p>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@ResourceMain.Created</th>
                <th>@ResourceMain.PostId</th>
                <th>@ResourceMain.Prediction</th>
                <th>@ResourceMain.UserId</th>
                <th>@ResourceMain.Name</th>
                <th>@ResourceMain.Nickname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var twitt in Model)
            {
                <tr>
                    <td>@twitt.created_at</td>
                    <td>@twitt.post_id</td>
                    <td>@twitt.text</td>
                    <td>@twitt.user_id</td>
                    <td>@twitt.user_name</td>
                    <td>@twitt.user_nick</td>
                    <td>@Html.ActionLink(@ResourceMain.Edit, "TweetEdit", new { x = twitt.Twittid, page = Model.PageNumber })</td>
                    <td>@Html.ActionLink(@ResourceMain.Delete, "TweetDelete", new { x = twitt.Twittid, page = Model.PageNumber })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination"))
    </div>
</section>