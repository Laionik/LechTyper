@model LechTyper.Models.Odd
@{
    ViewBag.Title = "Edycja kursów";
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h3>Edytujesz kurs @Model.OddID</h3>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink("Powrót", "OddIndex")
    </p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Zaloguj się</legend>
            <table class="table table-striped table-hover" style="width:60%">
                @Html.HiddenFor(m => m.OddID)
                <tr>
                    <td> @Html.LabelFor(m => m.MatchID)</td>
                    <td> @Html.TextBoxFor(m => m.MatchID)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.odd_1)</td>
                    <td> @Html.TextBoxFor(m => m.odd_1)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.odd_x)</td>
                    <td> @Html.TextBoxFor(m => m.odd_x)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.odd_2)</td>
                    <td> @Html.TextBoxFor(m => m.odd_2)</td>
                </tr>
            </table>
            <br />
            <input class="btn btn-default" type="submit" value="Zapisz" />
        </fieldset>
    }
</section>