@using LechTyper.Resources
@model LechTyper.Models.Twitt
<hgroup class="title">
    <h1>@ResourceMain.PostEdit</h1>
    <h3>@ResourceMain.PostEditing @Model.user_nick</h3>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink(@ResourceMain.AdminPanel, "Admin")
    </p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <table class="table table-striped table-hover" style="width:60%">
                @Html.HiddenFor(m => m.Twittid)
                @Html.HiddenFor(m => m.post_id)
                @Html.HiddenFor(m => m.user_id)
                @Html.HiddenFor(m => m.user_name)
                @Html.HiddenFor(m => m.created_at)
                @Html.HiddenFor(m => m.user_nick)
                <tr>
                    <td> @Html.LabelFor(m => m.text)</td>
                    <td> @Html.TextBoxFor(m => m.text)</td>
                </tr>
            </table>
            <br />
            <input class="btn btn-default" type="submit" value=@ResourceMain.Save />
        </fieldset>
    }
</section>