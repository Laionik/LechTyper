@using LechTyper.Resources
@model IPagedList<LechTyper.Models.UserProfile>
<hgroup class="title">
    <h1>@ResourceMain.UserManage</h1>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink(@ResourceMain.AdminPanel, "Admin")
    </p>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@ResourceMain.Id</th>
                <th>@ResourceMain.Name</th>
                <th>@ResourceMain.Mail</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userprofile in Model)
            {
                <tr>
                    <td>@userprofile.UserId</td>
                    <td>@userprofile.UserName</td>
                    <td>@userprofile.UserMail</td>
                    <td>@Html.ActionLink(@ResourceMain.Edit, "UserEdit", new { x = userprofile.UserId, page = Model.PageNumber })</td>
                    <td>@Html.ActionLink(@ResourceMain.Delete, "UserDelete", new { x = userprofile.UserId, page = Model.PageNumber })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination"))
    </div>
</section>