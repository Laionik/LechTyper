@using LechTyper.Resources
@model IPagedList<LechTyper.Models.Game>
<hgroup class="title">
    <h1>@ResourceMain.MatchManage</h1>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink(@ResourceMain.AdminPanel, "Admin")
    </p>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@ResourceMain.Data</th>
                <th>@ResourceMain.MatchCompetition</th>
                <th>@ResourceMain.MatchHome</th>
                <th>@ResourceMain.MatchGuest</th>
                <th>@ResourceMain.MatchResult</th>
                <th>@ResourceMain.MatchPlayed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                string iscompleted = game.isCompleted? @ResourceMain.Yes : @ResourceMain.No;
                <tr>
                    <td>@game.date</td>
                    <td>@game.Competition</td>
                    <td>@game.Host</td>
                    <td>@game.Guest</td>
                    <td>@game.FTHostGoal:@game.FTGuestGoal</td>
                    <td>@iscompleted</td>
                    <td>@Html.ActionLink(@ResourceMain.Edit, "MatchEdit", new { x = game.MatchID, page = Model.PageNumber })</td>
                    <td>@Html.ActionLink(@ResourceMain.Delete, "MatchDelete", new { x = game.MatchID, page = Model.PageNumber })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination"))
    </div>
</section>