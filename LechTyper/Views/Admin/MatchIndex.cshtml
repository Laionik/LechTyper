@model IPagedList<LechTyper.Models.Game>
@{
    ViewBag.Title = "Zarządzaj meczami";
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<section class="panel">
    <p>
        @Html.ActionLink("Panel admina", "Admin")
    </p>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Data</th>
                <th>Rozgrywki</th>
                <th>Gospodarz</th>
                <th>Gość</th>
                <th>Bramki gosp</th>
                <th>Bramki gość</th>
                <th>Rozegrany?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                string iscompleted = game.isCompleted? "tak" : "nie";
                <tr>
                    <td>@game.date</td>
                    <td>@game.Competition</td>
                    <td>@game.Host</td>
                    <td>@game.Guest</td>
                    <td>@game.FTHostGoal</td>
                    <td>@game.FTGuestGoal</td>
                    <td>@iscompleted</td>
                    <td>@Html.ActionLink("Edytuj", "MatchEdit", new { x = game.MatchID, page = Model.PageNumber })</td>
                    <td>@Html.ActionLink("Usuń", "MatchDelete", new { x = game.MatchID, page = Model.PageNumber })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination"))
    </div>
</section>