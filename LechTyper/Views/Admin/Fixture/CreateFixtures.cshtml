@using LechTyper.Resources
@model List<LechTyper.Models.Fixture>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ResourceMain.CreateFixture</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-10">
            <p class="bs-component">
                <h3>Awanse i spadki</h3>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@ResourceMain.MatchDay</th>
                            <th>@ResourceMain.MatchHome</th>
                            <th>@ResourceMain.MatchGuest</th>
                            <th>@ResourceMain.Result</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model)
                        {
                            <tr>
                                <td>@match.matchDay</td>
                                <td>@match.homeId</td>
                                <td>@match.guestId</td>
                                <td>@match.homeGoal:@match.guestGoal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </p>
        </div>
    </div>
</div>