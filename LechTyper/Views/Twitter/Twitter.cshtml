@using LechTyper.Resources
@model List<Tweetinvi.Core.Interfaces.ITweet>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ResourceMain.Twitter</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-10">
            <p class="bs-component">
                @if (Model.Count > 0)
                {
                    <h3>Wczytane wpisy (Razem: @Model.Count())</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@ResourceMain.Date</th>
                                <th>@ResourceMain.Name</th>
                                <th>@ResourceMain.TwitterPost</th>
                                <th>@ResourceMain.TwitterAccountStatus</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tweet in Model)
                            {
                                <tr>
                                    <td>@tweet.CreatedAt</td>
                                    <td>@tweet.CreatedBy.ScreenName</td>
                                    <td>@tweet.Text</td>
                                    @if (tweet.CreatedBy.Protected)
                                    {
                                        <td class="yes">Tak</td>
                                    }
                                    else
                                    {
                                        <td class="no">Nie</td>
                                    }

                                    @*<td>@Html.ActionLink(@ResourceMain.Edit, "UserEdit", new { x = userprofile.UserId, page = Model.PageNumber })</td>
                                        <td>@Html.ActionLink(@ResourceMain.Delete, "UserDelete", new { x = userprofile.UserId, page = Model.PageNumber })</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3>Brak wpisów</h3>
                }
            </p>
        </div>
    </div>
</div>
