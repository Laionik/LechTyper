@using LechTyper.Resources
@model List<LechTyper.Models.Tweet>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>@ResourceMain.Twitter</h1>
        </div>
    </div>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-10">
            <p class="bs-component">
                @if (Model.Count > 0)
                {
                    <h3>Wczytane wpisy (Razem: @Model.Count())</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@ResourceMain.Date</th>
                                <th>@ResourceMain.PostId</th>
                                <th>@ResourceMain.Name</th>
                                <th>@ResourceMain.MatchResult</th>
                                <th>@ResourceMain.MatchHalf</th>
                                <th>@ResourceMain.MatchScorer</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tweet in Model)
                            {
                                <tr>
                                    <td>@tweet.postDate.ToShortDateString()</td>
                                    <td>@tweet.tweetId</td>
                                    <td>@tweet.userName</td>
                                    <td>@tweet.result</td>
                                    <td>@tweet.resultHalf</td>
                                    <td>@tweet.scorer</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3>Brak wpisów</h3>
                }
            </p>
        </div>
    </div>
</div>
